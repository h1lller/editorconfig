root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{go,py,rb,php,isml}]
indent_style = space
indent_size = 2

[*.js]
indent_style = tab

[*.md]
trim_trailing_whitespace = false


[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
